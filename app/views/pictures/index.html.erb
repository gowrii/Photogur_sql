<% content_for :header_content do %>
	<h1>Pictures</h1>
<% end %>
<%= link_to "New Picture", "/pictures/new" %>

<% @pictures.each do |picture| %>
  <p><%= picture[:title] %>, <%= picture[:artist] %></p>
  <%= link_to image_tag(picture.url), "pictures/#{picture.id}" %>
<% end %>



<% content_for :sidebar_content do %>
<h3>Most recent pictures</h3>
<ul>
<% @recent_pics.each do |picture| %>
<li><%= picture.title %>: <%= picture.artist %></li>
<%end%>
</ul>
<%end%>
